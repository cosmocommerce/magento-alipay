<?xml version="1.0"?>
<layout version="0.1.0">
    
    <alipay_payment_pay>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addCss"><stylesheet>css/alipay.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><script>js/alipay.js</script></action>
            <block type="core/text" name="alipay.google.jqueryui.cdn">
                <action method="setText">
                    <text><![CDATA[<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>]]></text>
                </action>
            </block>
        </reference>
        <reference name="content">  
            <block type="alipay/payment" name="payment" as="payment"  before="*" template="alipay/payment.phtml" >
                <block type="alipay/redirect" name="redirect" as="redirect"  before="*"  />
            </block>
        </reference>
    </alipay_payment_pay>
    
</layout> 